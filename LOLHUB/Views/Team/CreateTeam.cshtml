@model LOLHUB.Models.Team

@{
    ViewData["Title"] = "CreateTeam";
}

<h2>Create your Team!</h2>


<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTeam">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input  type="submit" value="CreateTeam" class="btn btn-success" />
            </div>
        </form>
     </div>
</div>

<div>
    <a class="btn btn-default" asp-controller="Team" asp-action="Index">Back to List</a>
</div>

