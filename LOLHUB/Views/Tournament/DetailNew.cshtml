@model IList<LOLHUB.Models.Team>
@{
    ViewData["Title"] = "Index";
}

<h1>DetailPage of Tournament with id = @ViewBag.TournamentId </h1>
<h3>List participated Teams who join this tournament: </h3>


<table class="table table-hover table-striped">
    <tr>
        <th>Team ID</th>
        <th>Team Name</th>
        <th>Team Leader</th>
        <th>Members Count</th>
        <th>W.I.P.</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.TeamLeader.ConectedSummoners.name</td>
            <td>@item.Players.Count()</td>
            <td>  <a asp-controller="Team" asp-action="DetailNew" asp-route-id="@item.Id">[Team Members/Team Details]</a></td>
        </tr>
            
    }
    </table>
